<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>
<VBox fx:id="ScenePane" prefHeight="340.0" prefWidth="438.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
   <children>
      <BorderPane fx:id="ChoosePane" layoutX="111.0" layoutY="49.0" prefHeight="222.0" prefWidth="215.0">
         <top>
            <Label prefHeight="72.0" prefWidth="200.0" text="Choose the avatar you would like to play with!" textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Arial Italic" size="20.0" />
               </font>
            </Label>
         </top>
         <right>
            <Button fx:id="change_right" mnemonicParsing="false" onAction="#changeRight" prefHeight="33.0" prefWidth="29.0" BorderPane.alignment="CENTER">
               <graphic>
                  <FontAwesomeIcon iconName="ARROW_RIGHT" />
               </graphic>
            </Button>
         </right>
         <left>
            <Button fx:id="ChangeLeft" mnemonicParsing="false" onAction="#changeLeft" prefHeight="33.0" prefWidth="29.0" BorderPane.alignment="CENTER">
               <graphic>
                  <FontAwesomeIcon iconName="ARROW_LEFT" />
               </graphic>
            </Button>
         </left>
         <center>
            <ImageView fx:id="myImageView" fitHeight="137.0" fitWidth="123.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="images/IcyTower.PNG" />
               </image></ImageView>
         </center>
         <bottom>
            <Button fx:id="GoButton" onAction="#Switch_to_scene2_after_choose" mnemonicParsing="false" prefHeight="32.0" prefWidth="51.0" text="GO!" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </children>
</VBox>
